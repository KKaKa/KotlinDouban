language: android
jdk: oraclejdk8

before_cache:
 -rm -f $HOME/.gradle/caches/modules-2/modules-2.lock
 -rm -fr $HOME/.gradle/caches/*/plugin-resolution/

cache:
 directories:
 -$HOME/.gradle/caches/
 -$HOME/.gradle/wrapper/

env:
 global:
 - ANDROID_API=25
 - ANDROID_BUILD_TOOLS=25.0.0
 - ADB_INSTALL_TIMEOUT=5 # minutes

android:
 components:
 - tools
 - platform-tools
 - build-tools-$ANDROID_BUILD_TOOLS
 - android-$ANDROID_API
 - extra-google-m2repository
 - extra-android-m2repository # for design library

 licenses:
 - 'android-sdk-license-.+'
 - 'android-sdk-preview-license-.+'
 - google-gdk-license-.+

lintOptions {
    abortOnError false
}

script:
  - ./gradlew assembleRelease

before_deploy:
  - ls app/build/outputs/apk/

deploy:
  provider: releases
  api_key:
    secure: ${GH_TOKEN}
  file: app/build/outputs/apk/app-release-unsigned.apk
  skip_cleanup: true
  on:
    tags: true