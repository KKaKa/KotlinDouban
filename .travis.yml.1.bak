language: android
jdk: oraclejdk8
sudo: true






android:
  components:
    - build-tools-27.0.3
    - android-26
    - extra-android-support
    - extra-android-m2repository
    - extra-google-m2repository

  licenses:
    - android-sdk-preview-license-.+
    - android-sdk-license-.+
    - google-gdk-license-.+



before_script:
  - chmod +x gradlew

script:
  - ./gradlew assembleRelease

before_deploy:
  - ls app/build/outputs/apk/

deploy:
  provider: releases
  api_key:
    secure: ${GH_TOKEN}
  file: app/build/outputs/apk/app-release-unsigned.apk
  skip_cleanup: true
  on:
    tags: true